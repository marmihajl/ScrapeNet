{% extends 'base.html.twig' %}
{% block body %}
    {{ form_start(form) }}

    {{ form_widget(form) }}

    {{ form_end(form) }}

    <table>
        <thead>
            <tr>
                <td>Title</td>
                <td>Description</td>
                <td>URL</td>
                <td>Image</td>
                <td>Domain</td>
                <td>Details</td>
            </tr>
        </thead>
        {% for r in result %}
            <tr>
                <td>{{ r.title }}</td>
                <td>{{ r.description }}</td>
                <td><a href="{{ r.path }}">{{ r.path }}</a></td>
                <td><img src="{{ r.image }}" width="100" height="100"/></td>
                <td>{{ r.url }}</td>
                <td><a href="/{{ r.slug }}">Detalji...</a></td>
            </tr>
        {% endfor %}
    </table>
    {% if(page > 1) %}
        <a href="/search/page/{{ page-1 }}">Previous</a>
    {% endif %}
    Page: {{ page }}
    {% if(nextPage) %}
        <a href="/search/page/{{ page+1 }}">Next</a>
    {% endif %}
{% endblock %}